{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pipeline</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pipeline.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pipeline.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ pipeline.url }}</td>
            </tr>
            <tr>
                <th>Securitytoken</th>
                <td>{{ pipeline.securityToken }}</td>
            </tr>
            <tr>
                <th>Environment</th>
                <td>{{ pipeline.environment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pipeline_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pipeline_edit', { 'id': pipeline.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
