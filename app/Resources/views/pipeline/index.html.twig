{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pipelines list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>Securitytoken</th>
                <th>Environment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pipeline in pipelines %}
            <tr>
                <td><a href="{{ path('pipeline_show', { 'id': pipeline.id }) }}">{{ pipeline.id }}</a></td>
                <td>{{ pipeline.name }}</td>
                <td>{{ pipeline.url }}</td>
                <td>{{ pipeline.securityToken }}</td>
                <td>{{ pipeline.environment }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('pipeline_show', { 'id': pipeline.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('pipeline_edit', { 'id': pipeline.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pipeline_new') }}">Create a new pipeline</a>
        </li>
    </ul>
{% endblock %}
